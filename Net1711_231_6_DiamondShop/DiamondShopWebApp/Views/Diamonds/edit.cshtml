@model DiamondShopData.ViewModel.DiamondDTO.DiamondDTO

<div class="form-group row">
    <div class="col-md-6">
        <label for="Name">Name</label>
        @Html.HiddenFor(model => model.Id)  <!-- Thêm phần tử ẩn chứa giá trị ID -->
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
    </div>
</div>
<div class="form-group row">
    <div class="col-md-6">
        <label for="Origin">Origin</label>
        @Html.EditorFor(model => model.Origin, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="CaratWeight">CaratWeight</label>
        @Html.EditorFor(model => model.CaratWeight, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
