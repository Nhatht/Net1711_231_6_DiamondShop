        @Html.EditorFor(model => model.CertificateNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="Price">Price</label>
        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="col-md-6">
        <label for="IsDeleted">IsDeleted</label>
        @Html.CheckBoxFor(model => model.IsDeleted, new { htmlAttributes = new { @class = "form-check-input" } })
    </div>
    <div class="col-md-6">
    </div>
</div>
